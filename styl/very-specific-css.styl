.blog-page .author-tags
  display: none;
  
.blog-page .cta
  margin-bottom: 0;
  
  &:after
    display: none;

.twitter
.directory.vertical
  max-height: 400px;
  overflow-y: auto;
  
.twitter
  margin-bottom: 3rem;
  
.company-blog .author-tags
  float: right;
  
  
@media only screen and (min-width: 48em)
  .blog-page .author-tags
    display: block;
    
  .blog-page .blog-item:nth-child(odd)
    padding-right: 12px;

  .blog-page .blog-item:nth-child(even)
    padding-left: 12px;
    
  .company-blog .blog-item:nth-child(3)
  .company-blog .blog-item:nth-child(4)
  .company-blog .blog-item:nth-child(5)  
    width: 33%;
    
  .company-blog .blog-item:nth-child(4)
  .blog-item.presentation:nth-child(2)
    padding-right: 12px;
    
  .company-blog .blog-item:nth-child(5) 
  .blog-item.presentation:nth-child(3)
    padding-left: 12px;
    padding-right: 0;
    
  .team-blog .blog-item:nth-child(odd)
    padding-right: 0;
  
  .team-blog .blog-item:nth-child(even)
    padding-left: 0;
    
    
@media only screen and (min-width: 64em)
  .blog-page .blog-item:nth-child(odd)
    padding-right: 24px;

  .blog-page .blog-item:nth-child(even)
    padding-left: 24px;
    
  .company-blog .blog-item:nth-child(4)
  .blog-item.presentation:nth-child(2)
    padding-right: 24px;
    
  .company-blog .blog-item:nth-child(5) 
  .blog-item.presentation:nth-child(3)
    padding-left: 24px;
    
  .team-blog .blog-item:nth-child(odd)
    padding-right: 0;
  
  .team-blog .blog-item:nth-child(even)
    padding-left: 0;
