.portfolio
  list-style: none;
  margin: 0;
  padding: 0;

.portfolio-item
  padding: 3rem 0 2.5rem;
  
  &:after
    content: '';
    max-width: 876px;
    height: 1px;
    background-color: rgba(0,0,0,0.25);
    position: relative;
    bottom: -2.5rem;
    display: block;
    margin: 0 auto;
    
  &:last-child:after
    display: none;
  
  & .project-description
    padding-bottom: 3rem;
    
    & .btn
      margin-top: 2.6rem;
      max-width: 88%;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
  
  & h1
    font-weight: 300;
    color: $dark-blue;
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0 0 1.6rem;
    
  & h2
    font-size: 0.875rem;
    text-transform: uppercase;
    color: $blue;
    letter-spacing: 0.02rem;
    font-weight: 700;
    margin: 1.55rem 0 0;
    line-height: 1.714;
    
  & p
    margin: 0;
    
  & .data-title
  & .data
    box-sizing: border-box;
    display: inline-block;
    vertical-align: top;
    padding-bottom: 1.45rem;
    
  & .data-unit.website > *
  & .data-unit.client > *
    vertical-align: middle;
    
  & .data-unit.client img
    max-width: 50%;
    
  & .data-unit.technology li
  & .data-unit.people li
    display: inline-block;
    vertical-align: top;
    
  & .data-unit.people
    
    & .data-title
      margin-top: 0.375rem;
    
    & li .avatar
      margin-right: .375rem;
    
  & .data-title
    color: $gray-text;
    width: 35%;
    text-align: right;
    padding-right: 0.5rem;
    
  & .data 
    width: 65%;
    padding-left: 0.5rem;
    
    & ul
      list-style: none;
      margin: 0;
      padding: 0;
      
    & .tag
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      width: inherit;
      margin: 0 1rem 0.25rem 0;
      
    & li:last-child .tag
      margin-bottom: 0;
      
  & .data-unit:last-child
    padding-bottom: 0;
      
  & .project-image
    margin-bottom: 1.5rem;
    text-align: center;
    
    & img
      max-width: 120%;
      margin-left: -10%;
    
@media only screen and (min-width: 48em)
  .portfolio-item
    & .project-description
    & .project-data
    & .project-image
      display: inline-block;
      vertical-align: top;
      box-sizing: border-box;
      
    & .project-description
      width: 65%;
      padding-right: 1.5rem;
    
    & .project-data
      width: 35%;
      margin-top: 1.4rem;
 
    &.mobile
    &.webapp
      & .project-image
        max-width: 80%;
        vertical-align: middle;
        
        & img
          max-width: 100%;
          margin-left: 0;
              
      & .project-description
        width: 50%;
        vertical-align: middle;
      
      & .project-data
        display: table;
        width: 100%;

      & .data-unit
        display: table-cell;
        padding: 0 0.5rem;

        & .data-title
        & .data
          width: 100%;
          text-align: left;
          padding-left: 0.5rem;
          padding-bottom: 0.5rem;
    
    &.mobile .project-image
      margin-left: -30%;
      
    &.webapp .project-image
      margin-right: -30%;
          

@media only screen and (min-width: 64em)
  .portfolio-item
    &.mobile .project-image
      max-width: 50%;
      margin-left: 0;
      
    &.webapp .project-image
      max-width: 55%;
      margin-right: -5%;
      