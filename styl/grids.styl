// GRIDS
// based on https://css-tricks.com/dont-overthink-it-grids/
// need new grid? - add one

[class*='-col-']
[class*='col-']
  float: left;
  width: 100%;
  box-sizing: border-box;
  
  & iframe
    max-width: 100%;
  
.pad-right
  padding-right: 24px!important;
  
.row:after
  content: "";
  display: table;
  clear: both;
  
ul.row
  list-style: none;
  padding: 0;
  margin: 0;
  
.col-1-1
  width: 100%;

@media only screen and (min-width: 48em)
  .md-col-1-2
    width: 50%;
    
  .md-col-2-3
    width: 66.66%;

  .md-col-1-3
    width: 33.33%;
    
  .md-col-2-5
    width: 40%;

  .md-col-3-5
    width: 60%;
    
  .md-col-1-4
    width: 25%;
    
  .md-col-3-4
    width: 75%;
    
  .md-col-3-8
    width: 37.5%;