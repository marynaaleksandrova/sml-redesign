// Buttons

.btn
  border-color: $blue;
  border-radius: 1rem;
  border-style: solid;
  border-width: 1px;
  color: $blue;
  display: inline-block;
  padding: 0.125rem 1rem;
  text-decoration: none;
  transition: all 250ms;
  white-space: nowrap;
  
  &:hover
    background-color: $blue;

  &.large
    border-radius: 1.5rem;
    padding: .5rem 1.75rem;

  &.green
    border-color: $green;
    color: $green-text;
    
    &:hover
      background-color: $green;
      
  &.dark-blue
    border-color: $dark-blue;
    color: $dark-blue;
    
    &:hover
      background-color: $dark-blue;
      
  &.light-blue
    border-color: $light-blue;
    color: $light-blue-text;
    
    &:hover
      background-color: $light-blue;
      
  &.dark-purple
    border-color: $dark-purple;
    color: $dark-purple;
    
    &:hover
      background-color: $dark-purple;
  
  &.light-purple
    border-color: $light-purple;
    color: $light-purple;
    
    &:hover
      background-color: $light-purple;
  
  &.pink
    border-color: $pink;
    color: $pink-text;
    
    &:hover
      background-color: $pink;
      
  &.light-green
    border-color: $light-green;
    color: $light-green-text;
    
    &:hover
      background-color: $light-green;
      
  &:hover
    color: white;
    
.btn,
.btn.large
  &.full
    background-color: $blue;
    color: white;
    
    &:hover
      color: $blue;
      
    &.green
      background-color: $green;
      
      &:hover
        color: $green-text;
      
    &.dark-blue
      background-color: $dark-blue;
    
      &:hover
        color: $dark-blue;
        
    &.light-blue
      background-color: $light-blue;
      
      &:hover
        color: $light-blue-text;
        
    &.dark-purple
      background-color: $dark-purple;
      
      &:hover
        color: $dark-purple;
    
    &.light-purple
      background-color: $light-purple;
      
      &:hover
        color: $light-purple;
    
    &.pink
      background-color: $pink;
      
      &:hover
        color: $pink-text;
        
    &.light-green
      background-color: $light-green;
      
      &:hover
        color: $light-green-text;
        
    &:hover
        background-color: transparent;