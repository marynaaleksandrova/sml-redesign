// Blog items
    
.blog-item
  margin: 1.21rem 0;
  
  & a
    text-decoration: none;
    color: inherit;
    
    &:hover h1
      color: $dark-blue;
  
    & h1
      font-size: 1.125rem;
      line-height: 1.34;
      margin-top: 1.1rem;
      margin-bottom: 0;
      text-decoration: none;
    
    & .excerpt
      margin-top: 0.05rem;
      margin-bottom: 1.325rem;

    &.btn
      color: $blue;
      
      &:hover
        color: white;
    
  & .presented-at
    color: $gray-text;
    margin-top: 1.35rem;
    margin-bottom: 0;
    
  &.presentation h1
    margin-top: 0;