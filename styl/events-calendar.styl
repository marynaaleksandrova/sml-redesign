// Event calendar

.events
.talks
  // padding: 0 12px;
  margin: 0 12px;

  & li
    vertical-align: top;
  
  & .btn
    border-color: $green;
    color: $green-text;
    margin-bottom: 0.5rem;
    
    &:hover
      background-color: $green;
      color: white;
  
.event-month
  color: $pink-text;
  margin: 0 0 0.5rem 12px;
  border-left: 1px solid $gray;
  padding-left: 12px;
  
.event
  max-width: 15rem;
  // margin-left: 12px;
  color: $gray-text;
  box-sizing: border-box;
  display: table-cell;
  
  &:first-child
    margin-left: 0;
  
.event-type
  text-transform: uppercase;
  font-size: 0.875rem;
  letter-spacing: 0.05rem;
  line-height: 1.714;
  margin: 0;
  
.events .event-type
  margin: .85rem 0 .7rem;

.event-name 
.talk-name
  font-size: 1.25rem;
  line-height: 1.2;
  white-space: normal;
  margin: 0 auto;
  
  & a
    color: black;
    text-decoration: none;
    
    &:hover
      color: $dark-blue;
      
.event-name
  // display: -webkit-box;
  // -webkit-line-clamp: 2;
  // -webkit-box-orient: vertical;
  // overflow: hidden;
  // text-overflow: ellipsis;
  
  
.events .event-name
  height: 3rem;
  overflow-y: hidden;
  
.talks 
  & .event
    border-left: 1px solid $gray;
    border-right: 1px solid $gray;
    padding: 0 12px 0.5rem 12px;
    margin-bottom: 0.5rem;

  & .event-name
    font-size: 1rem;
    color: $blue;
    
    &:hover
      color: $dark-blue;
      
  & .author .name
    font-weight: 400;
    color: $gray-text;
    
  & .event-date
    margin-bottom: 1rem;
    
.talk-name
  max-height: 4.5rem;
  overflow-y: hidden;
  margin-bottom: 1.1rem;

.event-date
.event-place
  margin: 0;
  
.event .more
  width: 36px;
  height: 36px;
  display: inline-block;
  border: 1px solid $gray;
  border-radius: 18px;
  vertical-align: top;
  font-size: .75rem;
  padding-top: 9px;
  text-align: center;
  box-sizing: border-box;
     
.event-attendees 
  margin-bottom: 0.75rem;
  white-space: nowrap;

  & > *
    margin-right: 0.375rem;
  
  &:last-child
    margin-right: 0;
    

@media only screen and (min-width: 48em)
  .event-month
    margin-left: 24px;
    // .event
    
  .event-month
    padding-left: 24px;
    
  .talks .event
    padding: 0 24px 0.5rem 24px;
  
@media only screen and (min-width: 64em)
  .event-month
    margin-left: 48px;
    // .event
    
  .event-month
    padding-left: 48px;
    
  .talks .event
    padding: 0 48px 0.5rem 48px;


.event-item
  text-decoration: none;
  padding: 1.5rem;
  border: 1px solid $gray;
  display: inline-block;
  color: $gray-text;
  width: 100%;
  box-sizing: border-box; 
  transition: box-shadow 300ms, border-color 300ms;
  
  & .event-name
    color: black;

  &:hover
    box-shadow: inset 0 -0.25rem 0px 0px $pink;
    border-bottom-color: $pink;
    color: $gray-text;
    
    & .event-name
      color: $dark-blue;

.sponsorship
  margin: 0 0 1.5rem;